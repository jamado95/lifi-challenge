{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "#types": ["types.ts"],
      "#router": ["router.ts"],
      "#contracts": ["contracts"],
      "#models": ["models"],
      "#technical/*": ["technical/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "migrations", "backups", "src/**/*.dep.ts"]
}